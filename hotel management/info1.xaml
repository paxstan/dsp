        <RadioButton x:Name="info_unmarry" Content="UNMARRIED" Height="32.326" Margin="0,0,122.836,74.704" VerticalAlignment="Bottom" FontSize="15" HorizontalAlignment="Right" Width="103.581"/>
        <RadioButton x:Name="info_marry" Content="MARRIED" HorizontalAlignment="Right" Height="37.373" Margin="0,0,-4.947,69.657" VerticalAlignment="Bottom" Width="106.673" FontSize="15"/>
        <DatePicker x:Name="info_dob" Height="35.558" Margin="0,0,12.173,173.981" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="190"/>
        <Image x:Name="image7" HorizontalAlignment="Right" Height="43.931" Margin="0,0,224.661,165.608" VerticalAlignment="Bottom" Width="48.488" Source="icons8-birthday-filled-100.png"/>
        <Image x:Name="image8" HorizontalAlignment="Right" Height="49.064" Margin="0,0,224.661,83.47" VerticalAlignment="Bottom" Width="59.511" Source="icons8-romance-64.png"/>
        <Image x:Name="image9" HorizontalAlignment="Left" Height="57.393" Margin="66.267,47.456,0,0" VerticalAlignment="Top" Width="50.104" Source="icons8-wedding-day-filled-100 (1).png" Grid.Column="1"/>
        <Image x:Name="image10" HorizontalAlignment="Left" Height="47.447" Margin="66.267,137.383,0,0" VerticalAlignment="Top" Width="50.104" Source="icons8-passport-filled-100.png" Grid.Column="1"/>
        <DatePicker Height="26.892" Margin="143.847,64.98,23.585,0" VerticalAlignment="Top" Grid.Column="1"/>
        <ComboBox x:Name="info_id" Height="29" Margin="143.847,145.756,23.585,0" VerticalAlignment="Top" Grid.Column="1">
            <ComboBoxItem>AADHAR</ComboBoxItem>
            <ComboBoxItem>VOTER ID</ComboBoxItem>
            <ComboBoxItem>PAN CARD</ComboBoxItem>
            <ComboBoxItem>PASSPORT</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="info_other_id" Margin="143.847,188.541,4.051,0" TextWrapping="Wrap" Text="OTHERS" BorderThickness="0,0,0,1" Background="#FFF0EDC3" Foreground="#FF8D7E7E" ClipToBounds="True" VerticalContentAlignment="Center" FontSize="16" Height="29" VerticalAlignment="Top" ToolTip="Enter other id proof" Grid.Column="1" IsKeyboardFocusedChanged="info_oid_keyfocus" >
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
                    <GradientStop Color="#FFABADB3" Offset="0.05"/>
                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>
                    <GradientStop Color="#FF090A03" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <Button x:Name="create_but" Content="Button" Height="61.332" Margin="143.847,0,44.56,74.704" VerticalAlignment="Bottom" Template="{DynamicResource ENTER}" Grid.Column="1" Click="create_info"/>
        <CheckBox x:Name="info_foreign" Content="FOREIGNER" Height="30.709" Margin="139.956,0,0,204.286" VerticalAlignment="Bottom" FontSize="15" Checked="CFORM_CALL" Grid.Column="1"/>

    </Grid>
</Page>
